<div class="modal fade" id="exampleModalToggle2" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" tabindex="-1">
        <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Ticket</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>
                    The <b>@TicketId</b> will be deleted and all information regarding the ticket.
                </p>
   
                <div class="modal-footer">
                    <button type="submit" class="btn btn-outline-danger" data-bs-dismiss="modal" @onclick="HandleDelete">Confirm</button>
                </div>
     
            </div>
        </div>
    </div>
</div>


@code{
    @inject NavigationManager _navigationManager
    [Inject]
    private ITicketService _ticketService { get; set; }

    [Parameter]
    public Guid TicketId { get; set; }

    private Ticket deleteTicket { get; set; } = new Ticket();

    public async Task HandleDelete()
    {
        var deleted = await _ticketService.DeleteTicket(TicketId);
        _navigationManager.NavigateTo(_navigationManager.Uri, true);
    }
}


